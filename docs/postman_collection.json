        {
          "name": "Add Stock to Variant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"variant\",\n  \"id\": 5,\n  \"quantity\": 25,\n  \"reason\": \"Restocking popular variant\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/inventory/add",
              "host": ["{{base_url}}"],
              "path": ["inventory", "add"]
            }
          }
        },
        {
          "name": "Deduct Stock",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
