              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"product\",\n  \"id\": 1,\n  \"quantity\": 50,\n  \"reason\": \"Restocking from supplier\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/inventory/add",
              "host": ["{{base_url}}"],
              "path": ["inventory", "add"]
