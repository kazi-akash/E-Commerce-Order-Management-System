            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"product\",\n  \"id\": 1,\n  \"quantity\": 10,\n  \"reason\": \"Damaged goods\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/inventory/deduct",
              "host": ["{{base_url}}"],
              "path": ["inventory", "deduct"]
            }
          }
        }
      ]
    }
  ]
}
